<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>Christmas Tree Control Center for Desktop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- CSS -->
    <link href="css/bootstrap.css" rel="stylesheet">
    <style type="text/css">

      html,
      body {
        height: 100%;
      }

      #wrap {
        min-height: 100%;
        height: auto !important;
        height: 100%;
        /* Negative indent footer by it's height */
        margin: 0 auto -60px;
      }

      #push,
      #footer {
        height: 60px;
      }
      #footer {
        background-color: #f5f5f5;
      }

      @media (max-width: 767px) {
        #footer {
          margin-left: -20px;
          margin-right: -20px;
          padding-left: 20px;
          padding-right: 20px;
        }
      }

      .container {
        width: auto;
        max-width: 680px;
      }
      .container .credit {
        margin: 20px 0;
      }

    </style>
    <link href="css/bootstrap-responsive.css" rel="stylesheet">

    <!-- Fav and touch icons -->
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="apple-touch-icon-57-precomposed.png">

<script>
  function displayImg(str)
  {
    if (str.length==0) {
      document.getElementById("ImgArea").innerHTML="";
      return;
    }
    else {
      document.getElementById("ImgArea").innerHTML= str ;
      return;
    }
  }

  function callOut(button) {
    var xmlhttp;
    var resp;
    xmlhttp = new XMLHttpRequest();
    xmlhttp.open('GET', '<%= @url %>/<%= @address %>/' + button , false);
    xmlhttp.send();
    resp = xmlhttp.responseText;
    displayImg(resp);
  }
</script>
  </head>
  <body>

    <div id="wrap">

      <div class="container">
        <div class="page-header">
          <h1>Christmas Tree Control Center</h1>
        </div>
        <p class="lead">Control your Christmas Tree lights with the buttons below.</p>
          <a href='<%= @url %>/#' onClick="callOut('off')"><img src='off.png' title="Turn the tree off"></a>
          <a href='<%= @url %>/#' onClick="callOut('on')"><img src='on.png' title="Turn the tree on"></a>
         <p><span id="ImgArea"></span></p>
      </div>

      <div id="push">
      </div>
    </div>

    <div id="footer">
      <div class="container">
        <p class="muted credit">BSD License. Based hacking from <a href="http://twitter.com/stahnma">@stahnma</a>.</p>
      </div>
    </div>
    <script src="js/bootstrap.js"></script>
    <script src="js/bootstrap.min.js"></script>
  </body>
</html>

